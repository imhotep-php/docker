#!/usr/bin/env bash

UNAMEOUT="$(uname -s)"

# Verify operating system is supported...
case "${UNAMEOUT}" in
    Linux*)             MACHINE=linux;;
    Darwin*)            MACHINE=mac;;
    *)                  MACHINE="UNKNOWN"
esac

if [ "$MACHINE" == "UNKNOWN" ]; then
    echo "Unsupported operating system [$(uname -s)]. Imhotep Docker supports macOS, Linux, and Windows (WSL2)." >&2
    exit 1
fi

# Determine if stdout is a terminal...
if test -t 1; then
    # Determine if colors are supported...
    ncolors=$(tput colors)

    if test -n "$ncolors" && test "$ncolors" -ge 8; then
        BOLD="$(tput bold)"
        YELLOW="$(tput setaf 3)"
        GREEN="$(tput setaf 2)"
        NC="$(tput sgr0)"
    fi
fi

# Function that prints the available commands...
function display_help {
    echo "Imhotep Docker"
    echo
    echo "${YELLOW}Usage:${NC}" >&2
    echo "  idock COMMAND [options] [arguments]"
    echo
    echo "Unknown commands are passed to the docker-compose binary."
    echo
    echo "${YELLOW}Docker Compose Commands:${NC}"
    echo "  ${GREEN}idock up${NC}             Start the application"
    echo "  ${GREEN}idock up -d${NC}          Start the application in the background"
    echo "  ${GREEN}idock stop${NC}           Stop the application"
    echo "  ${GREEN}idock restart${NC}        Restart the application"
    echo "  ${GREEN}idock ps${NC}             Display the status of all containers"
    echo
    echo "${YELLOW}Imhotep Commands:${NC}"
    echo "  ${GREEN}idock imhotep ...${NC}    Run an Imhotep command"
    echo "  ${GREEN}idock imhotep list${NC}"
    echo
    echo "${YELLOW}Composer Commands:${NC}"
    echo "  ${GREEN}idock composer ...${NC}   Run a Composer command"
    echo "  ${GREEN}idock composer --version${NC}"
    echo
    echo "${YELLOW}PHP Commands:${NC}"
    echo "  ${GREEN}idock php ...${NC}        Run a snippet of PHP code"
    echo "  ${GREEN}idock php -v${NC}"
    echo
    echo "${YELLOW}Binaries:${NC}"
    echo "  ${GREEN}idock bin ...${NC}        Run Composer binary scripts from the vendor/bin directory"
    echo ""
    echo "${YELLOW}Others:${NC}"
    echo "  ${GREEN}idock open${NC}           Open the site in your browser"
    echo ""

    exit 1
}

# Proxy the "help" command...
if [ $# -gt 0 ]; then
    if [ "$1" == "help" ] || [ "$1" == "-h" ] || [ "$1" == "-help" ] || [ "$1" == "--help" ]; then
        display_help
    fi
else
    display_help
fi


# Source the ".env" file so Imhotep's environment variables are available...
# shellcheck source=/dev/null
if [ -n "$APP_ENV" ] && [ -f ./.env."$APP_ENV" ]; then
  source ./.env."$APP_ENV";
elif [ -f ./.env ]; then
  source ./.env;
fi

export APP_PORT=${APP_PORT:-80}
export APP_SERVICE=${APP_SERVICE:-"app"}
export DB_PORT=${DB_PORT:-3306}
export WWWUSER=${WWWUSER:-$UID}
export WWWGROUP=${WWWGROUP:-$(id -g)}

# Define Docker Compose command prefix...
if docker compose &> /dev/null; then
    DOCKER_COMPOSE=(docker compose)
else
    DOCKER_COMPOSE=(docker-compose)
fi

EXEC="yes"

function check_exec() {
  if [ "$EXEC" == "no" ]; then
    app_is_not_running
  fi
}

function app_is_not_running {
    echo "${BOLD}Imhotep Docker is not running.${NC}" >&2
    echo "" >&2
    echo "${BOLD}You may using the following commands:${NC} './imhodock up' or './imhodock up -d'" >&2

    exit 1
}

# Ensure that Docker is running...
if ! docker info > /dev/null 2>&1; then
    echo "${BOLD}Docker is not running.${NC}" >&2

    exit 1
fi

# Determine if app is currently up...
if "${DOCKER_COMPOSE[@]}" ps "$APP_SERVICE" 2>&1 | grep 'Exit\|exited'; then
    echo "${BOLD}Shutting down old docker processes...${NC}" >&2

    "${DOCKER_COMPOSE[@]}" down > /dev/null 2>&1

    EXEC="no"
elif [ -z "$("${DOCKER_COMPOSE[@]}" ps -q)" ]; then
    EXEC="no"
fi

ARGS=()

# Proxy PHP commands to the "php" binary on the application container...
if [ "$1" == "php" ]; then
  check_exec $EXEC
  shift 1

  ARGS+=(exec)
  [ ! -t 0 ] && ARGS+=(-T)
  ARGS+=("$APP_SERVICE" php)

# Proxy vendor binary commands on the application container...
elif [ "$1" == "bin" ]; then
  check_exec $EXEC
  shift 1

  CMD=$1
  shift 1
  ARGS+=(exec)
  [ ! -t 0 ] && ARGS+=(-T)
  ARGS+=("$APP_SERVICE" ./vendor/bin/"$CMD")

# Proxy Composer commands to the "composer" binary on the application container...
elif [ "$1" == "composer" ]; then
  check_exec $EXEC
  shift 1

  ARGS+=(exec)
  [ ! -t 0 ] && ARGS+=(-T)
  ARGS+=("$APP_SERVICE" composer)

# Proxy Imhotep commands to the "imhotep" binary on the application container...
elif [ "$1" == "imhotep" ] || [ "$1" == "imho" ] || [ "$1" == "i" ]; then
  check_exec $EXEC
  shift 1

  ARGS+=(exec)
  [ ! -t 0 ] && ARGS+=(-T)
  ARGS+=("$APP_SERVICE" php imhotep)

# Open the site...
elif [ "$1" == "open" ]; then
  check_exec $EXEC
  shift 1

  if [[ -n "$APP_PORT" && "$APP_PORT" != "80" ]]; then
      open "${APP_URL}:${APP_PORT}"
  else
      open "$APP_URL"
  fi

  exit
fi

# Run Docker Compose with the defined arguments...
"${DOCKER_COMPOSE[@]}" "${ARGS[@]}" "$@"