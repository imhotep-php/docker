{
  "name": "imhotep/docker",
  "type": "library",
  "description": "Docker files for running a basic Imhotep application.",
  "keywords": ["php", "docker"],
  "license" : "MIT",
  "homepage": "https://imhotep.dev",
  "authors": [
    {
      "name": "Imhotep",
      "email": "imhotep.php@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Imhotep\\Docker\\": "/src"
    }
  },
  "extra": {
    "imhotep": {
      "providers": [
        "Imhotep\\Docker\\DockerServiceProvider"
      ]
    }
  },
  "bin": ["bin/docker"],
  "require": {
    "php": "^8.2",
    "imhotep/components": "^1.0",
    "imhotep/process": "^1.0",
    "symfony/yaml": "^6.0|^7.0"
  },
  "minimum-stability": "dev"
}
